{
  "name": "favorx",
  "version": "1.0.0",
  "description": "A marketplace for exchanging favors without monetary transactions",
  "main": "src/api/server.js",
  "scripts": {
    "start": "node src/api/server.js",
    "dev": "nodemon src/api/server.js",
    "test": "jest --setupFiles ./src/tests/config/setup.js",
    "test:watch": "jest --watch --setupFiles ./src/tests/config/setup.js",
    "test:coverage": "jest --coverage --setupFiles ./src/tests/config/setup.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^6.7.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "aws-sdk": "^2.1.1",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "nodemailer": "^6.9.1",
    "redis": "^4.6.7",
    "geohash": "^0.2.1",
    "xss": "^1.0.14",
    "jsdom": "^21.1.1",
    "dompurify": "^3.0.1",
    "winston": "^3.8.2",
    "winston-elasticsearch": "^0.17.1",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "express-mongo-sanitize": "^2.2.0",
    "ua-parser-js": "^1.0.35",
    "geoip-lite": "^1.4.7"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "axios": "^1.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
} 